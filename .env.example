# Flask configuration
FLASK_ENV=development
PORT=5000

# Slack app credentials (from Slack App settings)
SLACK_CLIENT_ID=your-client-id
SLACK_CLIENT_SECRET=your-client-secret
VERIFICATION_TOKEN=your-verification-token

# Slack team settings (single team mode)
# Get SLACK_TEAM_ID from your Slack workspace settings or API
SLACK_TEAM_ID=T00000000
# Your workspace subdomain (e.g., "myteam" for myteam.slack.com)
SLACK_TEAM_DOMAIN=your-team-domain
# Bot token from OAuth flow (starts with xoxb-)
SLACK_BOT_TOKEN=xoxb-your-bot-token
# User access token from OAuth flow (starts with xoxp-)
SLACK_ACCESS_TOKEN=xoxp-your-access-token
# Inviter token for sending workspace invites (optional, requires client scope)
SLACK_INVITE_TOKEN=xoxp-your-invite-token

# Application settings
APP_URL=http://localhost:5000
SIGNUP_CHANNEL=admin-signups

# Optional
# COC_URL=https://example.com/code-of-conduct
